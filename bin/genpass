#!/usr/bin/env bash

usage() {
	echo "usage:" >&2
	echo "  $(basename "${0}") <args...>" >&2
	echo "generate a stable and 'secure' password based on <args...>" >&2

	if [ -n "${1}" ]; then echo "error: ${1}" > &2; fi

	exit 1
}

arg="${@:-}"

openssl blake2b512 -binary <<< "${arg}" | base64 -w 0

exit

list="
blake2b512
blake2s256
gost
sha256
sha384
sha512
"

for encoding in $list; do
	result="$(openssl "${encoding}" -binary <<< "${arg}" | base64 -w 0)"
	echo
	echo "  ${encoding} (${#result})"
	echo "${result}"
done
