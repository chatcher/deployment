#!/usr/bin/env bash

set -e

usage() {
	echo "Read or write today's work log." >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}") <entry...>" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

project="$(pwd | sed -e "s|${HOME}|~|")"
storage="${HOME}/Desktop/worklogs"
mkdir -p "${storage}" || usage "Failed to make storage at ${storage}"
cd "${storage}" || usage "No storage at ${storage}"

today="$(date '+%Y-%m-%d')"
file="${today}.txt"

entry="${*}"

if [ -z "${entry}" ]; then
	if [ -f "${file}" ]; then
		cat "${file}" >&2

	else
		echo "Nothing for today" >&2
	fi

else
	echo "[$(date '+%H:%M') ${project}] - ${entry}" >> "${file}"
	echo -e "${S_CS} Wrote to ${file} ${N_CS}" >&2
fi