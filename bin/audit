#!/usr/bin/env bash

set -e
set -x

usage() {
	echo "Description" >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}") [-x] <arguments>" >&2
	echo >&2
	echo "options:" >&2
	echo "  -x    Some unknown option" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

if is-yarn; then
	yarn audit --groups dependencies
else
	npm audit --omit=dev
fi
