#!/usr/bin/env bash

set -e
# set -x

usage() {
	echo "Stash changes and return the SHA" >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}")" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

git restore docs/v1/swagger.json || :
git restore docs/v1/swagger_v3.json || :

if has-changes; then
  # git stash create -u >&1
  # git reset --hard >&2
  # git clean -fd >&2
  # git checkout . >&2

  git stash -u >&2
  echo 1
fi
