#!/usr/bin/env bash

set -e
# set -x

usage() {
	echo "Description" >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}") <duration> [<command...>" >&2
	echo >&2
	echo "params:" >&2
	echo "  -d duration    how many seconds to wait, default 450" >&2
	echo "  command     command to run after the delay" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

timer() ({
	if [ -z "${1}" ]; then usage 'Missing parameter: duration'; fi
	if [[ "${1}" =~ [^0-9] ]]; then usage 'Invalid parameter: duration'; fi

	SLEEP_TIME="${1}"
	shift

	sleep "${SLEEP_TIME}"

	afplay /System/Library/PrivateFrameworks/ScreenReader.framework/Versions/A/Resources/Sounds/Alert.aiff &

	# shellcheck disable=SC2068
	$@
})

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

DELAY=450;

if [[ "${1}" =~ ^[[:digit:]]+$ ]]; then
	DELAY="${1}"
	shift;
fi

if (( $# == 0 )); then
	usage 'Command or resource required.'
fi

if command -v "${1}" > /dev/null; then
	timer "${DELAY}" "$@" &
else
	timer "${DELAY}" 'open' "$@" &
fi

echo -e "${S_CS} Okay ${N_CS}" >&2
