#!/usr/bin/env bash

set -e
set -x

usage() {
	echo "Description" >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}") <sha>" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

if [ "${1}" == '1' ]; then
	echo "Unstashing top of stack" >&2
  git stash apply --index || git stash apply
  git stash drop
elif [ -n "${1}" ]; then
	echo "Unstashing ${1}" >&2
	git stash apply --index "${1}" || git stash apply
fi
