#!/usr/bin/env bash

set -e

usage() {
	echo "Run 'git fetch', 'git status', and 'git branch' in sequence." >&2
	echo >&2
	echo "usage:" >&2
	echo "  $(basename "${0}")" >&2
	echo >&2

	if [ -n "${1}" ]; then echo -e "${A_CS} error: ${1} ${N_CS}" >&2; fi

	exit 1
}

if [[ "${1}" =~ ^-?-h(elp)?$ ]]; then usage ''; fi

line() {
	msg="${1}"
	echo -e "${S_CS}----------------------------------------------------------------${N_CS}"
	if [ -n "${msg}" ]; then
		echo -e "${K_CS}    ${msg}${N_CS}"
	fi
}

line 'versions' >&2
echo "node: $(node --version)" >&2 &
echo "npm:  v$(npm --version)" >&2 &
echo "yarn: v$(yarn --version)" >&2 &
wait

line 'git stashes' >&2
git stash list >&2

line 'git fetch' >&2
(sleep 5; echo still fetching... >&2) &
subshell="$!"
git fetch >&2
kill $subshell &>/dev/null

line 'git status'>&2
git status -bs >&2

line 'git branch' >&2
git branch >&2

line 'pull requests' >&2
listprs "${@}" >&2

line 'pull request' >&2
get-pull-request-number >&2 || echo 'none' >&2

line >&2